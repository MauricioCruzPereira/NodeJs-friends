<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/navbar.ejs') %>
            <div class="hero is-fullheight has-background-info-light">
                <div class="hero-body">
                    <div class="container">
                        <div class="columns">
                            <div class="column is-offset-one-quarter is-half">
                                <div class="box">
                                    <h2 class="title has-text-centered">Cadastro de usuário</h2>
                                    <form action="/user/register" method="POST">
                                        <div class="block">
                                            <div class="field">
                                                <label class="label">Nome</label>
                                                <div class="control">
                                                    <input class="input is-medium is-hovered" type="text"
                                                        placeholder="Nome" name="name" value="<%= name %>">
                                                    <% if (nameError) { %>
                                                        <p class="help is-danger">
                                                            <%= nameError %>
                                                        </p>
                                                        <% } %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="block">
                                            <div class="field">
                                                <label class="label">E-mail</label>
                                                <div class="control">
                                                    <input class="input is-medium is-hovered" type="email"
                                                        placeholder="Email" name="email" value="<%= email %>">
                                                    <% if (emailError) { %>
                                                        <p class="help is-danger">
                                                            <%= emailError %>
                                                        </p>
                                                        <% } %>
                                                            <% if (emailRegistered) { %>
                                                                <p class="help is-danger">
                                                                    <%= emailRegistered %>
                                                                </p>
                                                                <% } %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="block">
                                            <div class="field">
                                                <label class="label">Profissão</label>
                                                <div class="control">
                                                    <input class="input is-medium is-hovered" type="text"
                                                        placeholder="Profissão" name="profession">
                                                    <% if (professionError) { %>
                                                        <p class="help is-danger">
                                                            <%= professionError %>
                                                        </p>
                                                        <% } %>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="block">
                                            <div class="field">
                                                <label class="label">Senha</label>
                                                <div class="control">
                                                    <input class="input is-medium is-hovered" type="password"
                                                        placeholder="Senha" name="password">
                                                    <% if (passwordError) { %>
                                                        <p class="help is-danger">
                                                            <%= passwordError %>
                                                        </p>
                                                        <% } %>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="block">
                                            <div class="field has-text-centered">
                                                <button class="button is-success is-medium is-fullwidth">
                                                    <strong>Cadastrar</strong>
                                                </button>
                                                <% if (registerSuccess) { %>
                                                    <p class="help is-primary">
                                                        <%= registerSuccess %>
                                                    </p>
                                                    <% } %>
                                            </div>
                                            <div class="field">
                                                <a class="has-text-info" href="/users/login">Já possuo conta?</a>
                                                <a class="has-text-info is-pulled-right" href="/">Home</a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </body>

    <%- include('../partials/rodape.ejs') %>